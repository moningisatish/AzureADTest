<variable name="LOG_DIR" value="C:/LogSplit" />

	<appender name="SIFT" class="ch.qos.logback.classic.sift.SiftingAppender">
		<discriminator>
			<key>loggerName</key>
			<defaultValue>common</defaultValue>
		</discriminator>

		<sift>
			<appender name="COMPANY_LOG_${loggerName}" class="ch.qos.logback.core.rolling.RollingFileAppender">
				<file>${LOG_DIR}/${loggerName}/company-${loggerName}.log</file>
				<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
					<fileNamePattern>${LOG_DIR}/${loggerName}/company-${loggerName}.%d{yyyy-MM-dd}.log</fileNamePattern>
					<maxHistory>30</maxHistory>
				</rollingPolicy>
				<encoder>
					<pattern>%d{yyyy-MM-dd HH:mm:ss:sss} [%level] [%thread] [%logger:%line] %msg%n</pattern>
				</encoder>
			</appender>
		</sift>
	</appender>
